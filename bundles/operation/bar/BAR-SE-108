    type: string
    const: BAR-SE-108
  dateEngagement:
    type: string
    format: date
    formatMinimum: '2022-10-14'
  adresse:
    $ref: >-
      https://raw.githubusercontent.com/ceeconnect/json-schema/main/mixins/adresse#/$defs/franceMetropolitaine
required:
  - fiche
  - dateEngagement
  - adresse
allOf:
