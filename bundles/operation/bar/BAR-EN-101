$id: https://schemas.ceeconnect.fr/bundles/operation/bar/BAR-EN-101
$schema: https://raw.githubusercontent.com/ceeconnect/json-schema/main/meta-schema
title: BAR-EN-101
type: object
properties:
  fiche:
    type: string
    const: BAR-EN-101
  dateEngagement:
    type: string
    format: date
    formatMinimum: '2022-01-05'
  adresse:
    $ref: >-
      https://raw.githubusercontent.com/ceeconnect/json-schema/main/mixins/adresse#/$defs/franceMetropolitaine
required:
  - fiche
  - dateEngagement
  - adresse
allOf:
  - if:
      properties:
        dateEngagement:
          type: string
          format: date
          formatMinimum: '2022-01-05'
          formatExclusiveMaximum: '2024-01-01'
      required:
        - dateEngagement
    then:
      allOf:
        - $ref: '#/$defs/BAR-EN-101v39-4'
  - if:
      properties:
        dateEngagement:
          type: string
          format: date
          formatMinimum: '2024-01-01'
          formatExclusiveMaximum: '2027-05-01'
      required:
        - dateEngagement
    then:
      allOf:
        - $ref: '#/$defs/BAR-EN-101v54-5'
