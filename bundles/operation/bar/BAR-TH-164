$defs:
  BAR-TH-164v36-2:
    $id: https://schemas.ceeconnect.fr/bundles/operation/bar/BAR-TH-164v36-2
    $schema: https://raw.githubusercontent.com/ceeconnect/json-schema/main/meta-schema
