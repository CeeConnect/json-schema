          quantite:
            title: Surface de toiture protégée (en m²)
            type: number
            minimum: 0
          compositionToiture:
            $ref: https://raw.githubusercontent.com/ceeconnect/json-schema/main/enums/bar/constitution_toiture
          facteurSolaire:
            title: Facteur solaire (m².K/W)
            type: number
            maximum: 0.03
          marque:
            title: Marque de l'isolant
            type: string
          reference:
            title: Référence de l'isolant
            type: string
          installateur:
            $ref: https://raw.githubusercontent.com/ceeconnect/json-schema/main/bundles/operation/installateur
            type: object
            properties:
              qualificationsRge:
                type: array
                contains:
                  oneOf:
                    - $ref: https://raw.githubusercontent.com/ceeconnect/json-schema/main/enums/domaine_rge#/$defs/95
                    - $ref: https://raw.githubusercontent.com/ceeconnect/json-schema/main/enums/domaine_rge#/$defs/97
