          - ancienneteBatiment
          - energieChauffage
          - quantite
          - compositionToiture
          - facteurSolaire
          - marque
          - reference
          - installateur
      documents:
        type: array
        items:
          $ref: https://raw.githubusercontent.com/ceeconnect/json-schema/main/bundles/document
        contains:
          title: Preuve de qualification de l'installateur
          type: object
          properties:
            code:
              type: string
              const: PREUVE_QUALIFICATION
          required:
            - code
    allOf:
      - if:
          properties:
            adresse:
              type: object
              properties:
                codeCommune:
                  type: string
                  pattern: "[976].+"
              required:
                - codeCommune
          required:
            - adresse
        then:
          properties:
            description:
              type: object
              properties:
                facteurSolaire:
                  type: number
                  maximum: 0.02
              required:
                - facteurSolaire
          required:
            - description
      - if:
          properties:
            description:
              type: object
              properties:
                compositionToiture:
                  $ref: https://raw.githubusercontent.com/ceeconnect/json-schema/main/enums/bar/constitution_toiture#/$defs/ENSEMBLE_ELEMENTS
              required:
                - compositionToiture
          required:
            - description
        then:
          properties:
            documents:
              type: array
              allOf:
                - contains:
                    title: Note de calcul du facteur solaire
                    type: object
                    properties:
                      code:
                        const: NOTE_CALCUL
                    required:
                      - code
          required:
            - documents
    required:
      - description
      - documents
