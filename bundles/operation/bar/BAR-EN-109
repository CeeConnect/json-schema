    title: BAR-EN-109v24-1
    type: object
    properties:
      description:
        type: object
        properties:
          typeBatiment:
            $ref: https://raw.githubusercontent.com/ceeconnect/json-schema/main/enums/bar/type_batiment#/$defs/batiment
