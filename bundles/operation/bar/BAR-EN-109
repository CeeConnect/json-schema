$id: https://schemas.ceeconnect.fr/bundles/operation/bar/BAR-EN-109
$schema: https://raw.githubusercontent.com/ceeconnect/json-schema/main/meta-schema
title: BAR-EN-109
type: object
properties:
  fiche:
    type: string
    const: BAR-EN-109
  dateEngagement:
    type: string
    format: date
  adresse:
    $ref: https://raw.githubusercontent.com/ceeconnect/json-schema/main/mixins/adresse#/$defs/franceOutreMer
required:
  - fiche
  - dateEngagement
  - adresse
allOf:
  - if:
      properties:
        dateEngagement:
          type: string
          format: date
          formatMinimum: "2016-12-23"
      required:
        - dateEngagement
    then:
      allOf:
        - $ref: "#/$defs/BAR-EN-109v24-1"
